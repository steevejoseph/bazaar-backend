<% include ../partials/header.ejs %>
<h1>Listings Index</h1>

<% if(listings.length == 0) { %>
<h5>No Listings!</h5>
<% } %>

<% for(var i = 0; i < listings.length; i++) { %>
<h5><b>Title:  </b><%= listings[i].name %></h5>
<h5><b>Description:  </b></h5>
<p><%= listings[i].body %></p>
<h5><b>Posted by:  </b><%= listings[i].user %></h5>
<h5><b>Category:  </b><%= listings[i].category %></h5>
<h5><b>Tags: </b><% for(var i = 0; i < listings[i].tags.length; i++) { %> <%= listings[i].tags[i] %><% } %></h5>
<% } %>

<% include ../partials/footer.ejs %>
