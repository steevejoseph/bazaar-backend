{
  "version": 2,
  "builds": [
    {
      "src": "bin/www",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "nodeVersion": "18.x",
        "buildCommand": "cd .. && pnpm install --no-frozen-lockfile && cd frontend && pnpm install --no-frozen-lockfile && pnpm run build",
        "outputDirectory": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/frontend/build/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/bin/www"
    }
  ]
}
